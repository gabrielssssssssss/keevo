generator client {
  provider = "prisma-client-js"
  output   = "../app/database/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Authentification {
  id        String   @id @default(uuid())
  password  String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seedphrase {
  id        String   @id @default(uuid())
  seedHash  String   @default("")
  createdAt DateTime @default(now())
}

enum VaultType {
  PASSWORD
  PASSKEY
  SECURE_NOTE
  CREDIT_CARD
  CONTACT_INFO
  DOCUMENT
  SHARED_ITEM
}

model VaultItem {
  id        String    @id @default(uuid())
  type      VaultType
  data      Json
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
